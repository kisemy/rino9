<p id="notice"><%= notice %></p>

<h1>Invoice Lines</h1>

<table>
  <thead>
    <tr>
      <th>Charge type</th>
      <th>Item no</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Unit of measure</th>
      <th>Unit price</th>
      <th>Amount</th>
      <th>Invoice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoice_lines.each do |invoice_line| %>
      <tr>
        <td><%= invoice_line.charge_type %></td>
        <td><%= invoice_line.item_no %></td>
        <td><%= invoice_line.description %></td>
        <td><%= invoice_line.quantity %></td>
        <td><%= invoice_line.unit_of_measure %></td>
        <td><%= invoice_line.unit_price %></td>
        <td><%= invoice_line.amount %></td>
        <td><%= invoice_line.invoice_id %></td>
        <td><%= link_to 'Show', invoice_line %></td>
        <td><%= link_to 'Edit', edit_invoice_line_path(invoice_line) %></td>
        <td><%= link_to 'Destroy', invoice_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

