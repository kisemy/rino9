<p id="notice"><%= notice %></p>

<h1>Cashes</h1>

<table>
  <thead>
    <tr>
      <th>Cash name</th>
      <th>Posting group</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cashes.each do |cash| %>
      <tr>
        <td><%= cash.cash_name %></td>
        <td><%= cash.posting_group %></td>
        <td><%= cash.balance %></td>
        <td><%= link_to 'Show', cash %></td>
        <td><%= link_to 'Edit', edit_cash_path(cash) %></td>
        <td><%= link_to 'Destroy', cash, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

