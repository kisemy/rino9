<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<div class="card">

<div class="table-responsive border-bottom" data-toggle="lists" data-lists-values='["js-lists-values-customer-name"]'>

  <%# <div class="search-form search-form--light m-3">
    <input type="text" class="form-control search" placeholder="Search">
    <button class="btn" type="button" role="button"><i class="material-icons">search</i></button>
  </div>
   %>
 

 <div class="table-responsive">
 <table class="table table-striped table-bordered table-hover dataTables-example" >


  <thead>
    <tr>
      <th>Payment date</th>
      <th>Paying account code</th>
      <th>Paying acc description</th>
      <th>Prepared by</th>
      <th>Mode of payment</th>
      <th>Payment description</th>
      <th>Status</th>
      <th>Documentno</th>
      <th>Release date</th>
      <th>Posted</th>
      <th>Amount</th>
      <th>Payee code</th>
      <th>Payee name</th>
      <th>Account type</th>
      <th>Category type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.payment_date %></td>
        <td><%= payment.paying_account_code %></td>
        <td><%= payment.paying_acc_description %></td>
        <td><%= payment.prepared_by %></td>
        <td><%= payment.mode_of_payment %></td>
        <td><%= payment.payment_description %></td>
        <td><%= payment.status %></td>
        <td><%= payment.documentno %></td>
        <td><%= payment.release_date %></td>
        <td><%= payment.posted %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.payee_code %></td>
        <td><%= payment.payee_name %></td>
        <td><%= payment.account_type %></td>
        <td><%= payment.category_type %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
